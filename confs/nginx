/data/nginx-logs/*.log {
	daily
	size=100M
	missingok
	rotate 3
	compress
	delaycompress
	notifempty
	create 0640 www-data adm
	sharedscripts
	prerotate
		if [ -f /run/nginx.pid ]; then \
			kill -USR1 `cat /run/nginx.pid`; 
		fi 
	endscript
	# postrotate
	# 	invoke-rc.d nginx rotate >/dev/null 2>&1
	# endscript
}
